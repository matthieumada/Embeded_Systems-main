/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"



#include "xparameters.h"
#include "xil_io.h"
#include "xil_printf.h"
#include <stdint.h>


#ifndef XPAR_AXI_BRAM_CTRL_0_S_AXI_BASEADDR
#warning "Adaptez ce macro à votre design (voir xparameters.h)"
#define XPAR_AXI_BRAM_CTRL_0_S_AXI_BASEADDR 0x40000000U
#endif

#define BRAM_BASE  ((uint32_t)XPAR_AXI_BRAM_CTRL_0_S_AXI_BASEADDR)

int main(void)
{
    xil_printf("\r\n=== Demo PS <-> BRAM + UART ===\r\n");
    xil_printf("BRAM base = 0x%08lx\r\n", (unsigned long)BRAM_BASE);

    volatile uint32_t *bram = (uint32_t*)BRAM_BASE;

    // Écrit 8 mots en BRAM
    for (int i = 0; i < 8; ++i) {
        Xil_Out32((UINTPTR)&bram[i], 0xA5A50000u + (uint32_t)i);
    }

    // Relit et affiche
    for (int i = 0; i < 8; ++i) {
        uint32_t v = Xil_In32((UINTPTR)&bram[i]);
        xil_printf("BRAM[%d] = 0x%08lx\r\n", i, (unsigned long)v);
    }

    xil_printf("OK. Tapez Ctrl-A puis X pour quitter minicom.\r\n");
    while (1) {} // boucle
    return 0;
}

